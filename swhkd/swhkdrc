#all binds are converted from dvorak to qwerty

#run menu
#actually mod4 + r
mod4 + o
    wofi -iS drun 

#terminal
mod4 + enter
    kitty

#web browser
#actually mod4 + w
mod4 + ,
    firefox	

#river controls

#actually mod4 + shift + c
mod4 + shift + i
    riverctl close

#actually mod4 + shift + e
mod4 + shift + d
    riverctl exit

mod4 + shift + space
    riverctl toggle float

#actually mod4 + f
mod4 + y
    riverctl toggle-fullscreen

#actually mod4 + k
mod4 + v
    riverctl focus-view previous

#actually mod4 + j
mod4 + c
    riverctl focus-view next

#actually mod4 + shift + k
mod4 + shift + v
    riverctl swap previous

#actually mod4 + shift + j
mod4 + shift + c
    riverctl swap next

#actually mod4 + l
mod4 + p
	riverctl focus-output next

#actually mod4 + h
mod4 + j
	riverctl focus-output previous

#actually mod4 + shift + l
mod4 + shift + p
	riverctl send-to-output next

#actually mod4 + shift + h
mod4 + shift + j
	riverctl send-to-output previous

#actually mod4 + shift + r
mod4 + shift + o
	@enter resize

mode resize
escape
	@escape
#l
p
	riverctl resize horizontal -5
#h
j
	riverctl resize horizontal 5
#j
c
	riverctl resize vertical -5
#k
v
	riverctl resize vertical 5
shift + j
	riverctl send-layout-cmd rivertile "main-ratio +0.001"
shift + p
	riverctl send-layout-cmd rivertile "main-ratio -0.001"
